@model PaginatedList<ArkCRM.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Customers</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>
            Add New Customer
        </a>
    </div>

    <div class="mb-4 col-4 p-0 d-flex justify-content-end">
        <form asp-controller="Customers" asp-action="Index" class="w-100">
            <div class="input-group">
                <span class="input-group-text bg-light">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input class="form-control" type="text" name="SearchText" placeholder="Search customers..." />
                <button class="btn btn-info btn-sm px-3" type="submit">
                    <i class="fas fa-arrow-right"></i>
                </button>
            </div>
        </form>
    </div>
        <div class="row g-4">
            @foreach (var customer in Model)
            {
                <div class="col-md-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="card-title mb-0">@customer.Name</h5>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="row g-2">
                                <div class="col">
                                    <small class="text-muted">Address:</small>
                                    <br>
                                    <strong>@customer.Address</strong>
                                </div>
                            </div>

                            <div class="mt-3">
                                <small class="text-muted">Contact:</small>
                                <br>
                                <strong>Phone: @customer.TelephoneNumber</strong>
                                <br>
                                <strong>Email: @customer.ContactPersonEmail</strong>
                            </div>

                            <div class="d-flex justify-content-between mt-3">
                            <div>
                                <small class="text-muted">VAT:</small>
                                <br>
                                <strong>@customer.VatNumber</strong>
                            </div>
                                <div>
                                    <small class="text-muted">ID:</small>
                                    <br>
                                    <strong>@customer.Id</strong>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <nav class="mt-4 mb-lg-5">
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" class="page-link">
                            <i class="fas fa-angle-left"></i>
                            Previous
                        </a>
                    </li>
                }
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="page-link">
                            Next
                            <i class="fas fa-angle-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
