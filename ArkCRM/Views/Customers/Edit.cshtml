@model ArkCRM.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit a Customer</h3>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" asp-for="Address" />
    </div>
    <div class="form-group">
        <label for="TelephoneNumber">TelephoneNumber</label>
        <input type="text" class="form-control" asp-for="TelephoneNumber" />
    </div>
    <div class="form-group">
        <label for="ContactPersonName">ContactPersonName</label>
        <input type="text" class="form-control" asp-for="ContactPersonName" />
    </div>
    <div class="form-group">
        <label for="ContactPersonEmail">ContactPersonEmail</label>
        <input type="text" class="form-control" asp-for="ContactPersonEmail" />
    </div>
    <div class="form-group">
        <label for="VatNumber">VatNumber</label>
        <input type="text" class="form-control" asp-for="VatNumber" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
